{% extends "base.html.twig" %}

{% block body %}
    {% include 'providers.html.twig' %}
    <div id="main-container" class="container">
        {% include 'menu_left.html.twig' %}
        <div id="graphs">
            <script src="{{ asset('js/d3.v3.min.js') }}"></script>
            <p class="print-provider">{{ provider_name }}</p>
            <div class="title-div">
                <p class="title">{{ report.title }}</p>
                <div class="print-icon">
                    <a href=""><img src="{{ asset('images/print_icon.png') }}" alt="Print" onClick="window.print()" width="30px" ></a>
                </div>
            </div>
            <p class="description">{{ report.description }}</p>

            {% set index = 0 %}
            {% for graph in report.graphs %}
                {% set index = index + 1 %}
                <div class="graph">
                    {% include graph.template with { 'route': download, 'active_aspect': active_aspect, 'active_parameter': active_parameter, 'active_question': active_question, 'graph': graph, 'index': index } only %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
